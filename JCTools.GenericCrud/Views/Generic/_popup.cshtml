@using Microsoft.AspNetCore.Mvc.Localization
@using JCTools.GenericCrud;
@using JCTools.GenericCrud.Settings;

@model JCTools.GenericCrud.Models.Popup

@inject IViewLocalizer Localizer

@{
    var useBootstrap3 = Configurator.BootstrapVersion == Bootstrap.Version3;
}

<div class="modal fade" tabindex="-1" role="dialog" id="genericCrudModal">
    <div class="modal-dialog modal-lg" role="document">
        <div class="modal-content">
            @if (useBootstrap3)
            {
                <div class="modal-header">
                    <button type="button" class="close" data-dismiss="modal"
                        aria-label="@Localizer["GenericCrud.ClosePopup"]" title="@Localizer["GenericCrud.ClosePopup"]">
                        <span aria-hidden="true">&times;</span>
                    </button>
                    <h4 class="modal-title">@Model.Title</h4>
                </div>
                <div class="modal-body">
                    <div class="container-fluid">
                        <partial name="@Model.InnerView" model="Model.Model" />
                    </div>
                </div>
            }
            else
            {
                <div class="modal-header">
                    <h5 class="modal-title">@Model.Title</h5>
                    <button type="button" class="close" data-dismiss="modal"
                        aria-label="@Localizer["GenericCrud.ClosePopup"]" title="@Localizer["GenericCrud.ClosePopup"]">
                        <span aria-hidden="true">&times;</span>
                    </button>
                </div>
                <div class="modal-body">
                    <partial name="@Model.InnerView" model="Model.Model" />
                </div>
            }
            <div class="modal-footer">
                <button type="button" class="btn btn-secondary @(useBootstrap3 ? "btn-sm" : string.Empty)"
                    data-dismiss="modal">@Localizer["GenericCrud.ClosePopup"]</button>
                @if (Model.CommitAction != null)
                {
                    <partial name="_action" model="Model.CommitAction" />
                }
            </div>
        </div>
    </div>
</div>