@using JCTools.GenericCrud.Helpers
@using JCTools.GenericCrud.Controllers

@inject JCTools.GenericCrud.Services.IViewRenderService RenderingServices
@using Microsoft.AspNetCore.Mvc.Localization
@model JCTools.GenericCrud.Models.ICrudEdit
@inject IViewLocalizer Localizer

@{
    Layout = Model.UsePopups ? string.Empty : Model.LayoutPage;
    ViewData["Title"] = Model.Title;
    var values = @Model.GetModelValues();
}
@if (!Model.UsePopups)
{
    <h2>@Model.Title</h2>
    <h3>@Model.Subtitle</h3>
}
<div class="row">
    <form action="@ViewBag.Action"  method="POST" asp-anti-forgery="true">
        @foreach(var value in values)
        {
            if (value.Visible)
            {
                <div class="form-group row">
                    <label class="col-md-2 text-right" for="@value.Name">@value.Display</label>
                    <div class="col-md-10">
                        @await RenderingServices.CreateEditorFor(Model, Html, ViewData, value.Name)
                    </div>
                </div>
            }
            else 
            {                
                @await RenderingServices.CreateEditorFor(Model, Html, ViewData, value.Name, "HiddenFor")
            }
        }
        @if (!Model.UsePopups)
        {
            <div class="row">
                <div class="col-md-12">
                    @{
                        var data = new ViewDataDictionary(this.ViewData) 
                        { 
                            { "Url", Url.Action("Index") }
                        };
                    }
                    @Html.Partial("_action", Model.IndexAction, data)
                    @{
                        Model.SaveAction.UseSubmit = true;
                        data = new ViewDataDictionary(this.ViewData) 
                        { 
                            { "Url", Url.Action("SaveChanges") }
                        };
                    }
                    @Html.Partial("_action", Model.SaveAction, data)
                    
                </div>
            </div>
        }
    </form>
</div>