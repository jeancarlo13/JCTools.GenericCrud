@using JCTools.GenericCrud.Helpers
@using JCTools.GenericCrud.Controllers

@inject JCTools.GenericCrud.Services.IViewRenderService RenderingServices
@using Microsoft.AspNetCore.Mvc.Localization
@model JCTools.GenericCrud.Models.ICrudEdit
@inject IViewLocalizer Localizer

@{
    Layout = Model.UseModals ? string.Empty : Model.LayoutPage;
    ViewData["Title"] = Model.Title;
    var values = @Model.GetModelValues();

    Model.IndexAction.Url = Url.Action("Index");
    Model.SaveAction.UseSubmit = true;
    Model.SaveAction.Url = Url.Action("SaveChanges");
}
@if (!Model.UseModals)
{
    <h2>@Model.Title</h2>
    <h3>@Model.Subtitle</h3>
}
<div class="row">
    <form action="@(Model.UseModals ? "" : ViewBag.Action)"  method="POST" asp-anti-forgery="true">
        @foreach(var value in values)
        {
            if (value.Visible)
            {
                <div class="form-group row">
                    <label class="col-md-2 text-right" for="@value.Name">@value.Display</label>
                    <div class="col-md-10">
                        @await RenderingServices.CreateEditorFor(Model, Html, ViewData, value.Name)
                    </div>
                </div>
            }
            else 
            {                
                @await RenderingServices.CreateEditorFor(Model, Html, ViewData, value.Name, "HiddenFor")
            }
        }
        @if (!Model.UseModals)
        {
            <div class="row">
                <div class="col-md-12">
                    @Html.Partial("_action", Model.IndexAction)
                    @Html.Partial("_action", Model.SaveAction)
                </div>
            </div>
        }
    </form>
</div>